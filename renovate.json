{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "extends": [
    "config:base"
  ],
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": false
  },
  "separateMajorMinor": true,
  "pruneStaleBranches": true,
  "commitMessagePrefix": "dependency:",
  "packageRules": [
    {
      "groupName": "gradle",
      "matchPackagePatterns": [
        "gradle*"
      ],
      "automerge": true
    },
    {
      "groupName": "fabricmc",
      "matchPackagePatterns": [
        "net.fabricmc*",
        "fabric-loom*"
      ],
      "automerge": false
    },
    {
      "groupName": "spigotmc",
      "matchPackagePatterns": [
        "org.spigotmc*"
      ],
      "allowedVersions": "/^\\d+\\.\\d+(\\.\\d+)?-R\\d+\\.\\d+-SNAPSHOT$/",
      "automerge": false
    },
    {
      "groupName": "patch",
      "matchPackagePatterns": [
        "*"
      ],
      "updateTypes": ["patch"],
      "automerge": true
    },
    {
      "groupName": "minor",
      "matchPackagePatterns": [
        "*"
      ],
      "updateTypes": ["minor"],
      "automerge": true
    },
    {
      "groupName": "all-major",
      "matchPackagePatterns": [
        "*"
      ],
      "updateTypes": ["major"],
      "automerge": false
    }
  ]
}
